<Window x:Class="CargoWiseNoter.Views.NoteWindow"
        d:DataContext="{d:DesignInstance local:NoteWindow,
                                     IsDesignTimeCreatable=True}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CargoWiseNoter.Views"
        mc:Ignorable="d"
        Title="Note"
        Height="450"
        Width="300"
        Closing="Window_Closing"
        WindowStyle="None">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="2" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="35" />
            </Grid.ColumnDefinitions>
            <Label Foreground="Gray"
                   VerticalAlignment="Center"
                   Content="{Binding ViewModel.NoteKey}" />
            <ui:Button Grid.Column="1"
                       x:Name="CloseButton"
                       Grid.Row="2"
                       Content="v"
                       Appearance="Primary"
                       Click="CloseButton_Click" />
        </Grid>

        <Separator Grid.Row="1"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <ui:Button
                       x:Name="AddNoteButton"
                       Content="+"
                       Appearance="Success"
                        Foreground="White"
                       Click="AddNoteButton_Click"
                       Margin="2" />
            <ComboBox Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      ItemsSource="{Binding ViewModel.CurrentNotes, Mode=TwoWay}"
                      SelectedItem="{Binding ViewModel.CurrentNote, Mode=TwoWay,BindsDirectlyToSource=True}"
                      Margin="2" />
            <ui:Button Grid.Column="2"
                       x:Name="DeleteNoteButton"
                       Grid.Row="2"
                       Foreground="White"
                       Content="X"
                       Appearance="Danger"
                       Click="DeleteNoteButton_Click"
                       Margin="2"/>
        </Grid>
        <ui:TextBox Grid.Row="3"
                    Margin="2"
                    Text="{Binding ViewModel.CurrentNote.Title, Mode=TwoWay}" TextChanged="TextBox_TextChanged" />
        <ui:TextBox Grid.Row="4"
                    Margin="2"
                    Text="{Binding ViewModel.CurrentNote.Note, Mode=TwoWay}"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    AcceptsTab="True" />
    </Grid>
</Window>
