<Window x:Class="CargoWiseNoter.Views.NoteWindow"
        d:DataContext="{d:DesignInstance local:NoteWindow,
                                     IsDesignTimeCreatable=True}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CargoWiseNoter.Views"
        mc:Ignorable="d"
        Title="Note"
        Height="450"
        Width="300"
        Closing="Window_Closing"
        WindowStyle="None">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="35" />
            </Grid.ColumnDefinitions>
            <Label Foreground="Gray"
                   Content="{Binding ViewModel.NoteKey}" />
            <ui:Button Grid.Column="1"
                       x:Name="CloseButton"
                       Grid.Row="2"
                       Content="X"
                       Appearance="Danger"
                       Click="CloseButton_Click" />
        </Grid>
        <ui:TextBox Grid.Row="1"
                    Text="{Binding ViewModel.CurrentNote.Title, Mode=TwoWay}" />
        <ui:TextBox Grid.Row="2"
                    Text="{Binding ViewModel.CurrentNote.Note, Mode=TwoWay}"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    AcceptsTab="True" />
    </Grid>
</Window>
